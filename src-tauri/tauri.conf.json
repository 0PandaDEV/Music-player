{
  "build": {
    "beforeDevCommand": "pnpm nuxt dev",
    "beforeBuildCommand": "pnpm nuxt build",
    "devPath": "http://localhost:3000",
    "distDir": "../.output/public",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Vleer",
    "version": "0.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "net.pandadev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Vleer",
        "width": 1270,
        "height": 720
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
